{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["/docs"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-undefined": 1,
        "require-jsdoc": "off",
        "no-unused-vars": 1,
        "no-invalid-this": "off",
        "valid-jsdoc": "off"
    }
}
